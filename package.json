{
  "name": "self-help-manuscript-editor-v2",
  "version": "2.0.0",
  "description": "An Electron-based application for creating and editing self-help book manuscripts with AI assistance",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder build --win --publish never",
    "pack": "electron-packager . --platform=win32 --arch=x64 --icon=Shogun_Writing_Assistant.ico --out=dist --asar --overwrite"
  },
  "author": "Shogun",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.7.3",
    "dotenv": "^16.0.3",
    "quill": "^1.3.7"
  },
  "devDependencies": {
    "electron": "^24.0.0",
    "electron-builder": "^24.6.3",
    "electron-packager": "^17.1.1"
  },
  "build": {
    "appId": "com.yourcompany.selfhelpmanuscripteditor",
    "productName": "Self-Help Manuscript Editor V2",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "ai.js",
      "index.html",
      "package.json",
      ".env",
      "Shogun_Writing_Assistant.ico"
    ],
    "win": {
      "target": "nsis",
      "icon": "Shogun_Writing_Assistant.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "asar": true,
    "asarUnpack": "**\\*.{node,dll}"
  }
}